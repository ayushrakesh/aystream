---
interface SkillCategory {
  category: string;
  skills: string[];
}

const skillCategories: SkillCategory[] = [
  {
    category: "Languages",
    skills: ["C++", "Dart", "Go", "SQL"],
  },
  {
    category: "Frameworks",
    skills: ["Flutter", "Gin", "Firebase", "Ansible"],
  },
  {
    category: "Clouds & Databases",
    skills: [
      "MySQL",
      "PostgreSQL",
      "Google Cloud Platform (GCP)",
      "Firebase Firestore",
      "Amazon Web Services (EC2, S3, IAM, ECR)",
      "InfluxDB",
      "MongoDB",
    ],
  },
  {
    category: "DevOps & Monitoring",
    skills: ["Docker", "Kubernetes", "Grafana", "Telegraf", "SNMP", "CI/CD (GitHub Actions)"],
  },
  {
    category: "Developer Tools",
    skills: ["Postman", "VS Code", "GitHub", "GNS3", "Git", "Linux", "Paseto", "CLI Tools"],
  },
  {
    category: "Systems & Networking",
    skills: ["TCP/IP", "HTTP/HTTPS", "NAT", "Firewall Rules", "Virtual Networking", "Load Testing"],
  },
  {
    category: "Course Work",
    skills: [
      "Data Structures and Algorithms",
      "Computer Networks",
      "Object Oriented Programming",
      "Operating Systems",
      "Database Management Systems",
      "Distributed Systems",
    ],
  },
];
---

<div class="space-y-4">
  {skillCategories.map((categoryData) => (
    <div>
      <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-2">
        {categoryData.category}
      </h3>
      <div class="flex flex-wrap gap-2">
        {categoryData.skills.map((skill) => (
          <span class="px-3 py-1 text-sm rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
            {skill}
          </span>
        ))}
      </div>
    </div>
  ))}
</div> 