---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import Skills from "@/components/Skills.astro"
import SkillsIcon from "@/components/icons/Skills.astro"
---

<Layout
  title="Ayush Rakesh - Full Stack Developer & DevOps Engineer"
  description="Full Stack Developer specializing in Flutter, DevOps, and System Design. Experience in mobile app development, database design, and infrastructure monitoring. Skilled in C++, Dart, Docker, and cloud technologies."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experience">
      <TitleSection>
        <Briefcase class="size-8" />
        Work Experience
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <TitleSection>
        <CodeIcon class="size-7" />
        Projects
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about">
      <TitleSection>
        <ProfileCheck class="size-8" />
        About Me
      </TitleSection>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="skills">
      <TitleSection>
        <SkillsIcon class="size-8" />
        Skills
      </TitleSection>
      <Skills />
    </SectionContainer>
  </div>
  </main>
</Layout>
